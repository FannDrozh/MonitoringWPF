                   Margin="28,82,0,0" 
                   TextWrapping="Wrap" 
                   Text="Логин" 
                   VerticalAlignment="Top" 
                   FontSize="20"/>
        <TextBox HorizontalAlignment="Left" 
                 Margin="28,114,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="176" 
                 FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="28,167,0,0" 
                   TextWrapping="Wrap" 
                   Text="Пароль" 
                   VerticalAlignment="Top" 
                   FontSize="20"/>
        <TextBox HorizontalAlignment="Left" 
                 Margin="28,199,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="176" 
                 FontSize="22"/>
        <Button Content="Выход" 
                HorizontalAlignment="Left" 
                Margin="310,205,0,0" 
                VerticalAlignment="Top" 
                FontSize="22" 
                Width="130" 
                Background="{x:Null}" 
                BorderBrush="{x:Null}"/>
        <Button Content="Регистрация" 
                HorizontalAlignment="Left" 
                Margin="311,141,0,0" 
                VerticalAlignment="Top" 
                FontSize="22"
                Background="{x:Null}" 
                BorderBrush="{x:Null}"/>

    </Grid>
</Window>
